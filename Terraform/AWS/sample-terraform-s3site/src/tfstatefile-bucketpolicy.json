{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": "IAM_USER_ARN"
        },
        "Action": "s3:ListBucket",
        "Resource": "arn:aws:s3:::rapify-terraform"
      },
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": "IAM_USER_ARN"
        },
        "Action": ["s3:GetObject", "s3:PutObject"],
        "Resource": "TFSTATE-BUCKET-ARN/*"
      }
    ]
  }